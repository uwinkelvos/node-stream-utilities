{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"sourceMap": true,
		"outDir": "./lib/",
		"rootDir": "./src/",
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"removeComments": true
	},
	"include": ["./src/"]
}
